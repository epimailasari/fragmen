<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".busanafragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_200">


        <TextView
            android:id="@+id/busana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Busana"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.075" />

        <ImageView
            android:id="@+id/jahit"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/jahit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/busana" />

        <TextView
            android:id="@+id/njahit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="Jurusan Busana adalah jurusan yang mempelajari ilmu merancang busana. Pada jurusan ini, kamu akan mempelajari teknik mendesain, seluk beluk produksi busana atau fashion, belajar membuat pola, dan menjahit"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jahit" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>